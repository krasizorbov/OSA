@model OSA.Web.ViewModels.Suppliers.Input_Models.CreateSupplierInputModel
@{
    this.ViewData["Title"] = "Add Supplier";
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h1>Create A Supplier</h1>
            <partial name="_FlashMessageTypePartial" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bulstat"></label>
                <input asp-for="Bulstat" class="form-control">
                <span asp-validation-for="Bulstat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyId"></label>
                <select id="dropdowntipo" asp-for="CompanyId" class="form-control">
                    <option value="0" hidden disabled selected>Select Company</option>
                    @foreach (var name in Model.CompanyNames)
                    {
                        <option value="@name.Value">@name.Text</option>
                    }
                </select>
                <span asp-validation-for="CompanyId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
