@model OSA.Web.ViewModels.Purchases.Input_Models.CreatePurchaseInputModelTwo
@{
    this.ViewData["Title"] = "Add Purchase";
}

    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <h3>Step 2:</h3>
                <div class="form-group">
                    <label asp-for="StockName"></label>
                    <select id="dropdowntipo" asp-for="StockName" class="form-control">
                        <option value="0" hidden disabled selected>Select </option>
                        @foreach (var name in Model.StockNames)
                        {
                            <option>@name.Text</option>
                        }
                    </select>
                    <span asp-validation-for="StockName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TotalQuantity"></label>
                    <input asp-for="TotalQuantity" class="form-control">
                    <span asp-validation-for="TotalQuantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TotalPrice"></label>
                    <input asp-for="TotalPrice" class="form-control">
                    <span asp-validation-for="TotalPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" id="picker" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        $(".picker").datetimepicker({
            format: "dd/MM/yyyy",
            autoclose: true,
            todayBtn: true,
            pickerPosition: "bottom-left"
        });
    </script>
}
