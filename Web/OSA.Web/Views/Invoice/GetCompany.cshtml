@model OSA.Web.ViewModels.Invoices.Input_Models.ShowInvoiceByCompanyInputModel
@{
    this.ViewData["Title"] = "Show Invoice";
}

<div class="text-center">
    <div class="col-md-12">
        <center>
            <form method="post">
                <h3>Choose A Company</h3>
                <partial name="_FlashMessageTypePartial" />
                <div class="form-group">
                    <select id="dropdowntipo" asp-for="CompanyId" class="form-control">
                        <option value="0" hidden disabled selected>Select Company</option>
                        @foreach (var name in Model.CompanyNames)
                        {
                            <option value="@name.Value">@name.Text</option>
                        }
                    </select>
                    <span asp-validation-for="CompanyId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" id="picker" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" id="picker" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </center>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
