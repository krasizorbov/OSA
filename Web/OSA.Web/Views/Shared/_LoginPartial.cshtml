@using OSA.Common
@using OSA.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    <ul class="navbar-nav">
        @if (this.SignInManager.IsSignedIn(this.User))
        {
            <li class="nav-item">
                <div class="main-dropdown">
                    <button class="main-dropbtn">Company</button>
                    <div class="main-dropdown-content">
                        <a href="#">Register a Company</a>
                        <a href="#">Register a Supplier</a>
                        <a href="#">Show List of all Companies</a>
                        <a href="#">Show List of all Suppliers</a>
                    </div>
                </div>
            </li>

            <li class="nav-item">
                <div class="main-dropdown">
                    <button class="main-dropbtn">
                        Invoice

                    </button>
                    <div class="main-dropdown-content">
                        <a href="#">Register a Supplier's Invoice</a>
                        <a href="#">Show Invoices by Supplier</a>
                        <a href="#">Show all Invoices</a>
                    </div>
                </div>
            </li>

            <li class="nav-item">
                <div class="main-dropdown">
                    <button class="main-dropbtn">
                        Stock

                    </button>
                    <div class="main-dropdown-content">
                        <a href="#">Register a Stock</a>
                        <a href="#">Register a Monthly Sell</a>
                        <a href="#">Register a Monthly Purchase</a>
                        <a href="#">Show Stocks by Supplier</a>
                        <a href="#">Show all Stocks</a>
                        <a href="#">Show Monthly Sells</a>
                        <a href="#">Show Monthly Purchases</a>
                    </div>
                </div>
            </li>

            <li class="nav-item">
                <div class="main-dropdown">
                    <button class="main-dropbtn">
                        Book Value

                    </button>
                    <div class="main-dropdown-content">
                        <a href="#">Register a Book Value for a Stock</a>
                        <a href="#">Calculate Monthly Avalable Stock</a>
                        <a href="#">Show all Book Values</a>
                        <a href="#">Show all Available Stock</a>
                    </div>
                </div>
            </li>

            <li class="nav-item">
                <div class="main-dropdown">
                    <button class="main-dropbtn">
                        Expense Book

                    </button>
                    <div class="main-dropdown-content">
                        <a href="#">Register a Production Invoice</a>
                        <a href="#">Register a Receipt</a>
                        <a href="#">Show all Production Invoices</a>
                        <a href="#">Show all Receipts</a>
                    </div>
                </div>
            </li>

            <li class="nav-item">
                <div class="main-dropdown">
                    <button class="main-dropbtn">
                        Cash Book

                    </button>
                    <div class="main-dropdown-content">
                        <a href="#">Calculate Monthly Cash Book</a>
                        <a href="#">Display Monthly Cash Book</a>
                    </div>
                </div>
            </li>

            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @(this.User.Identity.Name)!</a>
            </li>

            if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="Administration" asp-controller="Dashboard" asp-action="Index" title="Admin">Admin</a>
                </li>
            }
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@(this.Url.Action("Index", "Home", new { area = string.Empty }))">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }
    </ul>
