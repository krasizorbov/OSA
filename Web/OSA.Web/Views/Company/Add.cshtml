@model OSA.Web.ViewModels.Companies.Input_Models.CreateCompanyInputModel
@{
    this.ViewData["Title"] = "Add Company";
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h1>Create A Company</h1>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bulstat"></label>
                <input asp-for="Bulstat" class="form-control">
                <span asp-validation-for="Bulstat" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
