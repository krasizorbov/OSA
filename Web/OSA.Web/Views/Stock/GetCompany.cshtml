@model OSA.Web.ViewModels.Stocks.Input_Models.ShowStockByCompanyInputModel
@{
    this.ViewData["Title"] = "Show Stock";
}

<div class="row">
    <div class="col-md-4">
            <form method="post">
                <h3>Избери Фирма</h3>
                <partial name="_FlashMessageTypePartial" />
                <div class="form-group">
                    <select id="dropdowntipo" asp-for="CompanyId" class="form-control">
                        <option value="0" hidden disabled selected>Избери фирма</option>
                        @foreach (var name in Model.CompanyNames)
                        {
                            <option value="@name.Value">@name.Text</option>
                        }
                    </select>
                    <span asp-validation-for="CompanyId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" id="picker" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" id="picker" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
